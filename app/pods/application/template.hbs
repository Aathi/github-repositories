<div class="container" style="margin-top:20px;">
  <nav class="navbar navbar-light bg-faded">
    <a class="navbar-brand" href="#">Git</a>
    <ul class="nav navbar-nav">
      <li class="nav-item">
        <div class="dropdown">
          <button
            class="btn btn-secondary dropdown-toggle"
            type="button" id="dropdownMenu1"
            data-toggle="dropdown"
            aria-haspopup="true"
            aria-expanded="false">
            Select the User
          </button>
          <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
            <a class="dropdown-item" {{action "selectAuser" 'users'}} href="#">User</a>
            <a class="dropdown-item" {{action "selectAuser" 'orgs'}} href="#">Organization</a>
          </div>
        </div>
      </li>
      {{#if isUserSelected}}
        <li class="nav-item">
          <span class="nav-link">{{ownername}}/{{isUserSelected}}</span>
        </li>
      {{/if}}

    </ul>
    <form class="form-inline pull-xs-right">
      {{#if isUserSelected}}
        {{input type="text" value=ownername class="form-control" placeholder="Organization / User"}}
        {{input type="text" value=accessToken class="form-control" placeholder="Access Token"}}
        <button class="btn btn-success-outline" {{action 'getRipos'}} type="submit">Show All Repositories</button>
      {{/if}}
    </form>
  </nav>
</div>


<div class="container" style="margin-top:10px;text-align:center;">
  <div class="row">
    <div class="col-md-12">
      {{#if formError}}
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
          <strong>Oh snap!</strong> {{formError}}
        </div>
      {{/if}}
    </div>
  </div>
</div>

<div class="container">
  {{outlet}}
</div>

