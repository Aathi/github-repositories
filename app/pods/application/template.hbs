<div class="container" style="margin-top:150px;">
  <div class="col-md-6 col-md-offset-3">
    <div class="input-group input-group-lg">
    {{radio-button
      value="users"
      groupValue=owner
      changed="hideOnChange"}} User
    <br>
    {{radio-button
      value="orgs"
      groupValue=owner
      changed="hideOnChange"}} Organization
    </div>
    <br>
    <div class="input-group input-group-lg">
      <span class="input-group-addon" id="sizing-addon1">@</span>
      {{input type="text" value=ownername class="form-control" placeholder="Organization / User"}}
    </div>
    <br>
    {{#if isUser}}
      <div class="input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1">@</span>
         {{input type="text" value=accessToken class="form-control" placeholder="Access Token"}}
      </div>
      <br>
    {{/if}}

    {{#if formError}}
      <label class="label label-danger">{{formError}}</label>
    {{/if}}
    <div class="pull-right">
      <button type="button" class="btn btn-primary btn-big" {{action 'getRipos'}}>Process</button>
    </div>
  </div>
</div>
<div class="container">
 <hr>
 {{outlet}}
</div>

